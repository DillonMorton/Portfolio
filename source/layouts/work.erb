<% wrap_layout :layout do %>
    <section class="work-piece">
        <div class="work-piece-header">
            <div class="container">
                <div class="work-piece-title">
                    <%= current_page.data.title %>
                </div>
                <div class="description">
                    <%= current_page.data.description %>

                    <a class="website" href="http://<%= current_page.data.url %>" title="<%= current_page.data.title %>" target="_blank">
                        <%= current_page.data.url %>
                    </a>
                </div>
                <div class="role">
                    <span>User Experience</span>, <span>User Interface Design</span>, & <span>Web Development</span>
                </div>
            </div>
        </div>
        <a href="/#work" class="back">
            <img src="/images/icons/close.jpg">
        </a>
        <%= yield %>
    </section>

